<div class="alert alert-warning alert-dismissible fade show w-50" id="alert" role="alert" style="margin-left:auto;margin-right:auto">
  <%= notice %>
  <div class="progress">
  <div class="progress-bar" id="load" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
</div>
</div>

<script type="text/javascript">
    percent = 100;
    $('#load').css('width', '100%');
    $('#load').addClass('progress-bar-striped active');
    timerId = setInterval(function() {

    // increment progress bar
    percent -= 5;
    $('#load').css('width', percent + '%');


    // complete
    if (percent < 0) {
      clearInterval(timerId);
      $('#pay').attr('disabled', false);
      $('#load').removeClass('progress-bar-striped active');
      $('#alert').alert('close');

      // do more ...

    }
          }, 200);
            // Closing the alert
    </script>